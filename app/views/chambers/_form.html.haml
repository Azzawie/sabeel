= form_for @chamber do |f|
  - if @chamber.errors.any?
    #error_explanation
      %h2= "#{pluralize(@chamber.errors.count, "error")} prohibited this chamber from being saved:"
      %ul
        - @chamber.errors.full_messages.each do |message|
          %li= message

  .table-responsive
    %table.table.table-striped.table-hover.table-sm.table-bordered
      %tbody
        %tr
          %th=t("chamber_name")
          %td= f.text_field :name
        %tr
          %th=t("description")
          %td= f.text_area :description
        %tr
          %th=t("notes")
          %td= f.text_area :notes
    
  .actions
    = f.submit 'Save'
